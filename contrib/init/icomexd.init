#!/usr/bin/env bash
#
#  icomexd The icomex core server.
#
#
# chkconfig: 345 80 20
# description: icomexd
# processname: icomexd
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/icomexd, see below
if [ -f /etc/sysconfig/icomexd ]; then
        . /etc/sysconfig/icomexd
fi

RETVAL=0

prog=icomexd
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/icomexd
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/icomexd}

# icomexd defaults to /usr/bin/icomexd, override with BITCOIND_BIN
icomexd=${BITCOIND_BIN-/usr/bin/icomexd}

# icomexd opts default to -disablewallet, override with BITCOIND_OPTS
icomexd_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $icomexd $icomexd_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog -t600
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
